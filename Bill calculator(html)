 <script>
    function calculateTotalPrice()
 {
  totalprice.innerHTML = 7*mcprice.value*mcqty.value*mchours.value+7*price.value*qty.value*hours.value+7*bprice.value*bqty.value*bhours.value+7*tprice.value*tqty.value*thours.value+7*rprice.value*rqty.value*rhours.value+7*Vprice.value*Vqty.value*Vhours.value+7*mprice.value*mqty.value*mhours.value;
   
  return false; 
 }
  </script>
